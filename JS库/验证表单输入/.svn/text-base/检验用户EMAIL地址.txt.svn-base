function verifyAddress(obj) 
{ 
// obtain form value into variable 
var email = obj.email.value; 
// define regex 
var pattern = /^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(\.[a-zA-Z0-9_-])+/; 
// test for pattern 
flag = pattern.test(email); 
if(flag) 
