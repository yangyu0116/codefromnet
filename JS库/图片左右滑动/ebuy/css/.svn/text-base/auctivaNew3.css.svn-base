/* General formatting and helper styles */
h2	{ color: #002f67; font-size: 138.5%; font-weight: normal; margin: 0 0 1em; }
h3	{ color: #002f67; font-size: 108%; font-weight: normal; margin: 0 0 1em; }

.btn	{ background: none; background-repeat: no-repeat; border: none; cursor: pointer; display: block;  padding: 0; overflow: visible; width: auto; text-indent: -999em; }
.inline li	{ display: inline; margin: 0; }

a:active,
a:focus		{ outline: 0; }


/* Home page */
#homeSplash h1	{ color: #f4861e; font-size: 275%; margin: 10px 0 0; text-align: center; }
#homeSplash h2	{ margin: 0; }
#homeSplash .inline	{ color: #002f67; font-size: 108%; margin: 0 0 1em; text-align: center; }

#btn_signUp	{ background: url("../images/defaultnew/btn_signup.gif"); float: left; width: 105px; height: 48px; margin: 0 5px 30px 0px; display: inline; }

#signInForm	{ border: 1px solid #c8c8c8; color: #535353; float: left; font-size: 10px; position: relative; width: 300px; height: 44px; white-space: nowrap; }
#signInForm input	{ color: #535353; font-size: 11px; margin: 4px 0 0 4px; *margin: 2px 0 0 4px; }

#fauxUsername	{ position: absolute; width: 0; height: 0; line-height: 0; text-indent: -999em; }
#fauxPassword	{ display: inline; font-size: 11px; position: absolute; left: 122px; top: 6px; }

#ftctrl_SignIn_cb_RememberMe	{ margin: 3px 3px 0 0; *margin: 3px 3px -3px 0; position: static; *position: relative; left: -3px; top: -3px; }

#secureSignin	{ margin: 0 6px; *margin: 0 6px -3px; position: static; *position: relative; top: -3px; }
#forgotPassword,
#signInForm label	{ margin: 0; *margin: 0 0 -3px; position: static; *position: relative; top: -3px; left: -3px; }

#signInForm #ftctrl_SignIn_btn_SignIn	{ margin: 0; position: absolute; top: 2px; right: 12px; *right: 10px; }


#homeSplash .stripNav ul	{ margin: 0 0 0 60px; *margin: 0 0 0 60px; }
#homeSplash .stripNav ul:hover {*margin:0 0 0 61px}

/*** Coda Slider ***/

.slider-wrap { background: url("../images/defaultnew/sliderbottom.gif") center bottom no-repeat; clear: both; text-align: center;width:880px;margin:0 auto;}

.stripViewer { background: url("../images/defaultnew/slidertop.gif") no-repeat; clear: both; margin: 0 auto; padding-bottom: 14px; overflow: hidden; position: relative; text-align: left; width: 760px; *width:759px; }

/* These 2 lines specify style applied while slider is loading */
.csw {width: 100%; height: 460px; background: #fff; overflow: scroll}
.csw .loading {margin: 200px 0 300px 0; text-align: center}


.stripViewer .panelContainer { /* This is the big long container used to house your end-to-end divs. Width is calculated and specified by the JS  */
	position: relative;
	left: 0; top: 0;
	width: 100%;
}

.stripViewer .panelContainer .panel { /* Each panel is arranged end-to-end */
	float:left;
	position: relative;
	width: 746px; /* Also specified in  .stripViewer  above */
}

.stripViewer .panelContainer .panel .wrapper { /* Wrapper to give some padding in the panels, without messing with existing panel width */
	padding: 14px;
}

.stripNav			{ margin: auto; }
.stripNav ul	{ margin: 0; }
.stripNav li	{ float: left; list-style: none; margin: 0; }
.stripNav a		{	display: block; width: 126px; height: 41px; position: relative; text-indent: -999em; margin-right: 0px; z-index: 1; }

.stripNav li.tab1 a { background-image: url("../images/defaultnew/tab_templates.gif"); width: 128px; }
.stripNav li.tab2 a { background-image: url("../images/defaultnew/tab_gallery.gif"); }
.stripNav li.tab3 a { background-image: url("../images/defaultnew/tab_store.gif"); }
.stripNav li.tab4 a { background-image: url("../images/defaultnew/tab_hosting.gif"); }
.stripNav li.tab5 a { background-image: url("../images/defaultnew/tab_software.gif"); }
.stripNav li.tab6 a { background-image: url("../images/defaultnew/tab_facts.gif"); width: 128px;  }


.stripNav li a.current, .stripNav li a.current:hover { background-position: 0 100%; position: relative; top: 1px; }

.wrapper div	{ float: left; margin-left: 15px; width: 320px; }

.stripViewer .panelContainer .panel li		{ color: #333; font-weight: bold; line-height: 138.5%; }

